{{outlet}}

{{pilas-boton-regresar}}

<p>Titulo: {{proyecto.titulo}}</p>

<p>cantidad de escenas: {{proyecto.escenas.length}}</p>

<ul>
  {{#each proyecto.escenas as |escena|}}
    <li>Escena: {{escena.nombre}} ({{escena.id}})</li>

      <ul>
        {{#each escena.actores as |actor|}}
          <li>Actor: {{actor.nombre}} (x: {{actor.x}}, y: {{actor.y}})</li>
        {{else}}
          <li>sin actores</li>
        {{/each}}
      </ul>

  {{else}}
    <li>sin escenas</li>
  {{/each}}
</ul>

<button {{action "agregarEscena" proyecto}} class='ui button'>Agregar escena</button>
<button {{action "agregarActor" proyecto}} class='ui button'>Agregar actor a la escena 1</button>
<button {{action "serializar" proyecto}} class='ui button'>Serializar</button>

<button {{action "cambiarEscena" proyecto}} class='ui button'>Cambiar el nombre de escena</button>

<button {{action "moverActores" proyecto}} class='ui button'>MoverActores a posiciones aleatorias en la escena 1</button>
